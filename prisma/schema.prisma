// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id              Int @id @default(autoincrement())
  uuid            String
  nickname        String
  body            String
  image_url       String
  comment_number  Int
  good_vote       Int
  bad_vote        Int
  posted_at       DateTime
  updatedAt       DateTime
  createdAt       DateTime
}
